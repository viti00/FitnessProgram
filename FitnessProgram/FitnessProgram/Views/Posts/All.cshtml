@model AllPostsQueryViewModel

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/AllPosts.css" />
}

@{
    var previousPage = Model.CurrentPage - 1;
    if(previousPage < 1)
    {
        previousPage = 1;
    }
}


<div class="body-section">

    <section class="row">
        <section class="col-12 elements-container scroll">
        <div class="create-btn-container">
        <a class="btn" asp-controller="Posts" asp-action="Create">Create Post</a>
    </div>
        @if (Model.PostCount == 0)
        {
            
            <div class="no-post-container">
                <h2>There is no post created</h2>
                <span class="small">Be the first who posting</span>
            </div>
        }
        @if(Model.PostCount > 0)
        {
             <div class="btn-container float-left">
                <a class="btn custom left @(Model.CurrentPage == 1 ? "disabled" : string.Empty)" 
                    asp-controller="Posts" 
                    asp-action="All"
                    asp-route-currentPage="@previousPage">&lt&lt&lt</a>
            </div>
            <div class="container d-flex flex-wrap align-items-center">
                @foreach (var post in Model.Posts)
                {
                     <a asp-area="" asp-controller="Posts" asp-action="Details" asp-route-id="@post.PostId">
                        <div class="card" style="width: 18rem; height: 17rem;">
                            <img class="card-img-top" src="@post.ImageUrl" alt="Image">
                            <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <p class="link-muted me-2"><i class="fa fa-thumbs-up"></i>@post.LikesCount</p>
                                    <p class="link-muted"><i class="fa fa-thumbs-down"></i>15</p>
                                </div>
                                    <p class="link-muted"><i class="fas fa-comment"></i>@post.CommentsCount</p>
                                </div>
                            </div>
                        </div>
                    </a>
                }           
            </div>
            <div class="btn-container float-right">
                <a class="btn custom right @(Model.CurrentPage == Model.MaxPage ? "disabled" : string.Empty)" 
                    asp-controller="Posts"
                    asp-action="All"
                    asp-route-currentPage="@(Model.CurrentPage + 1)">&gt&gt&gt</a>
            </div>
        }
    </section>
    </section>
</div>


@section Scripts{
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
}