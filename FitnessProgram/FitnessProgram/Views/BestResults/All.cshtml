@model AllBestResultsViewModel

@{
    ViewBag.Title = "Best Results";
}

@section Styles{
    <link rel="stylesheet" href="~/css/AllPosts.css" />
}

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }
}

<div class="body-section">
    <div class="color-overlay"></div>
    <div class="row">

        @if (Model.BestResults.Count() == 0)
        {

            <div class="no-post-container">
                <h2>There is no posts yet</h2>
            </div>
        }
        else
        {
            <div class="col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-10 offset-xl-1 elements-container">
                <div class="btn-container float-left">
                    <a class="btn custom left @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                   asp-controller="BestResults"
                   asp-action="All"
                   asp-route-currentPage="@previousPage">&lt&lt&lt</a>
                </div>
                <div class="container d-flex flex-wrap align-items-center">
                    @foreach (var post in Model.BestResults)
                    {
                        <a asp-area="" asp-controller="BestResults" asp-action="Details" asp-route-id="@post.Id">
                            <div class="card" style="width: 18rem; height: 17rem;">
                               <div class="d-flex justify-content-between align-items-center">
                                    <img class="card-img-top" src="@post.ImageUrlBefore" style="width: 8.5rem;height: 9rem;" alt="Image"/>
                                    <img class="card-img-top" src="@post.ImageUrlAfter" style="width: 8.5rem;height: 9rem;" alt="Image"/>
                               </div>
                                <div class="card-body" style="min-width: 273px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p>@post.Story.Substring(0, post.Story.Length > 30? 30 : post.Story.Length)...</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
                <div class="btn-container float-right">
                    <a class="btn custom right @(Model.CurrentPage == Model.MaxPage ? "disabled" : string.Empty)"
                   asp-controller="BestResults"
                   asp-action="All"
                   asp-route-currentPage="@(Model.CurrentPage + 1)">&gt&gt&gt</a>
                </div>
                <div class="page-number-container">
                    <p class="text-light">Page @Model.CurrentPage from @Model.MaxPage</p>
                </div>
            </div>
        }
    </div>
</div>
