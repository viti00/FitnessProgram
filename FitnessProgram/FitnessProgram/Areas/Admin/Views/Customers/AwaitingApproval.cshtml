@model List<CustomerViewModel>

@section Styles{
    <link rel="stylesheet" href="~/css/Customers.css" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
}
@{
    ViewBag.Title = "Awaiting Approval";
}

@{
    int counter = 1;
}
<div class="body-section">
    <div class="color-overlay"></div>
    @if (Model.Count == 0)
    {
        <div class="no-customer">
            <h2>There is no requests yet</h2>
        </div>
    }
    else
    {
        <div class="table-section">
            <table class="table table-hover table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Sex</th>
                        <th scope="col">Age</th>
                        <th scope="col">Desired Results</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr data-id="@customer.Id">
                            <th scope="row">@counter</th>
                            <td><div>@customer.FullName</div></td>
                            <td>@customer.Email</td>
                            <td>@customer.PhoneNumber</td>
                            <td>@customer.Sex</td>
                            <td>@customer.Age</td>
                            <td><div class="results">@customer.DesiredResults</div></td>
                            <td>
                                <a onclick="Approve(@customer.Id)" title="Approve" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                <a onclick="Reject(@customer.Id)" title="Reject" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>

                        counter++;
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts{
    <script src="/js/CustomersApproveAndReject.js"></script>
}